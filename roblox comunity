    <script>
        // Staff ID Database
        const STAFF_DATABASE = {
            // Owners
            '7389596840': { role: 'owner', name: 'Owner 1' },
            '9119879621': { role: 'owner', name: 'Owner 2' },
            // Developer
            '9117761747': { role: 'developer', name: 'Developer' },
            // Head Admin
            '8935152746': { role: 'headadmin', name: 'Head Admin' },
            // Admins
            '8963001003': { role: 'admin', name: 'Admin 1' },
            '2900556168': { role: 'admin', name: 'Admin 2' },
            '9458094251': { role: 'admin', name: 'Admin 3' },
            '9297382144': { role: 'admin', name: 'Admin 4' }
        };

        // Current logged in staff
        let currentStaff = null;

        // Store uploaded image as base64
        let uploadedImageBase64 = null;
        let uploadedGameThumbnail = null;
        let uploadedStaffPhoto = null;
        let editingStaffId = null;
        let editingDonorId = null;
        let isManagingStaff = false;

        // Role icons mapping
        const ROLE_ICONS = {
            owner: 'üëë',
            developer: 'üíª',
            headadmin: '‚≠ê',
            admin: 'üõ°Ô∏è',
            moderator: 'üî∞',
            creator: 'üé•'
        };

        // Role labels mapping
        const ROLE_LABELS = {
            owner: 'OWNER',
            developer: 'DEVELOPER',
            headadmin: 'HEAD ADMIN',
            admin: 'ADMIN',
            moderator: 'MODERATOR',
            creator: 'CONTENT CREATOR'
        };

        // Preview staff photo
        function previewStaffPhoto(event) {
            const file = event.target.files[0];
            const errorDiv = document.getElementById('staffError');
            
            if (!file) return;

            if (!file.type.match('image/jpeg') && !file.type.match('image/png')) {
                errorDiv.textContent = 'Format file harus JPG atau PNG';
                event.target.value = '';
                return;
            }

            if (file.size > 2 * 1024 * 1024) {
                errorDiv.textContent = 'Ukuran file maksimal 2MB';
                event.target.value = '';
                return;
            }

            errorDiv.textContent = '';

            const reader = new FileReader();
            reader.onload = function(e) {
                uploadedStaffPhoto = e.target.result;
                document.getElementById('staffPhotoImg').src = e.target.result;
                document.getElementById('staffPhotoPreview').classList.add('active');
                document.getElementById('removeStaffPhotoBtn').style.display = 'inline-block';
            };
            reader.readAsDataURL(file);
        }

        // Remove staff photo
        function removeStaffPhoto() {
            uploadedStaffPhoto = null;
            document.getElementById('staffPhoto').value = '';
            document.getElementById('staffPhotoPreview').classList.remove('active');
            document.getElementById('removeStaffPhotoBtn').style.display = 'none';
        }

        // Toggle content type (Update or Game)
        function toggleContentType() {
            const contentType = document.getElementById('contentType').value;
            const updateFields = document.getElementById('updateFields');
            const gameFields = document.getElementById('gameFields');
            
            if (contentType === 'update') {
                updateFields.style.display = 'block';
                gameFields.style.display = 'none';
            } else {
                updateFields.style.display = 'none';
                gameFields.style.display = 'block';
            }
        }

        // Preview game thumbnail
        function previewGameThumbnail(event) {
            const file = event.target.files[0];
            const errorDiv = document.getElementById('newsError');
            
            if (!file) return;

            if (!file.type.match('image/jpeg') && !file.type.match('image/png')) {
                errorDiv.textContent = 'Format file harus JPG atau PNG';
                event.target.value = '';
                return;
            }

            if (file.size > 2 * 1024 * 1024) {
                errorDiv.textContent = 'Ukuran file maksimal 2MB';
                event.target.value = '';
                return;
            }

            errorDiv.textContent = '';

            const reader = new FileReader();
            reader.onload = function(e) {
                uploadedGameThumbnail = e.target.result;
                document.getElementById('gameThumbnailImg').src = e.target.result;
                document.getElementById('gameThumbnailPreview').classList.add('active');
                document.getElementById('removeGameThumbnailBtn').style.display = 'inline-block';
            };
            reader.readAsDataURL(file);
        }

        // Remove game thumbnail
        function removeGameThumbnail() {
            uploadedGameThumbnail = null;
            document.getElementById('gameThumbnail').value = '';
            document.getElementById('gameThumbnailPreview').classList.remove('active');
            document.getElementById('removeGameThumbnailBtn').style.display = 'none';
        }

        // Preview uploaded image
        function previewImage(event) {
            const file = event.target.files[0];
            const errorDiv = document.getElementById('newsError');
            
            if (!file) return;

            // Check file type
            if (!file.type.match('image/jpeg') && !file.type.match('image/png')) {
                errorDiv.textContent = 'Format file harus JPG atau PNG';
                event.target.value = '';
                return;
            }

            // Check file size (max 2MB)
            if (file.size > 2 * 1024 * 1024) {
                errorDiv.textContent = 'Ukuran file maksimal 2MB';
                event.target.value = '';
                return;
            }

            errorDiv.textContent = '';

            const reader = new FileReader();
            reader.onload = function(e) {
                uploadedImageBase64 = e.target.result;
                document.getElementById('previewImg').src = e.target.result;
                document.getElementById('imagePreview').classList.add('active');
                document.getElementById('removeImageBtn').style.display = 'inline-block';
                document.getElementById('galleryCheckboxGroup').style.display = 'flex';
            };
            reader.readAsDataURL(file);
        }

        // Remove uploaded image
        function removeImage() {
            uploadedImageBase64 = null;
            document.getElementById('newsImage').value = '';
            document.getElementById('imagePreview').classList.remove('active');
            document.getElementById('removeImageBtn').style.display = 'none';
            document.getElementById('galleryCheckboxGroup').style.display = 'none';
        }

        // Check if staff is already logged in
        function checkLoginStatus() {
            const savedStaff = localStorage.getItem('rapsStaffLogin');
            if (savedStaff) {
                try {
                    currentStaff = JSON.parse(savedStaff);
                    updateUIForLoggedInStaff();
                } catch (e) {
                    localStorage.removeItem('rapsStaffLogin');
                }
            }
        }

        // Staff Login
        function staffLogin() {
            const robloxId = document.getElementById('robloxId').value.trim();
            const errorDiv = document.getElementById('loginError');
            
            if (!robloxId) {
                errorDiv.textContent = 'Mohon masukkan ID Roblox Anda';
                return;
            }

            const staff = STAFF_DATABASE[robloxId];
            
            if (!staff) {
                errorDiv.textContent = 'ID Roblox tidak terdaftar sebagai staff';
                return;
            }

            // Save to localStorage
            currentStaff = { id: robloxId, ...staff };
            localStorage.setItem('rapsStaffLogin', JSON.stringify(currentStaff));
            
            // Update UI
            updateUIForLoggedInStaff();
            closeLoginModal();
            
            // Show success message
            alert(`Selamat datang, ${staff.name}!`);
        }

        // Update UI for logged in staff
        function updateUIForLoggedInStaff() {
            const authSection = document.getElementById('staffAuthSection');
            authSection.innerHTML = `
                <span style="margin-right: 1rem; color: var(--gray);">üëã ${currentStaff.name}</span>
                <button class="staff-logout-btn" onclick="staffLogout()">Logout</button>
            `;
            
            // Show add news button
            document.getElementById('addNewsBtn').style.display = 'block';
            
            // Show manage staff button
            document.getElementById('manageStaffBtn').style.display = 'block';
            
            // Show manage donors button
            document.getElementById('manageDonorsBtn').style.display = 'block';
        }

        // Staff Logout
        function staffLogout() {
            if (confirm('Yakin ingin logout?')) {
                localStorage.removeItem('rapsStaffLogin');
                currentStaff = null;
                location.reload();
            }
        }

        // Modal Functions
        function openLoginModal() {
            document.getElementById('loginModal').classList.add('active');
            document.getElementById('loginError').textContent = '';
            document.getElementById('robloxId').value = '';
        }

        function closeLoginModal() {
            document.getElementById('loginModal').classList.remove('active');
        }

        function openAddNewsModal() {
            if (!currentStaff) {
                alert('Anda harus login sebagai staff terlebih dahulu');
                return;
            }
            document.getElementById('addNewsModal').classList.add('active');
            document.getElementById('newsError').textContent = '';
            document.getElementById('newsSuccess').textContent = '';
            
            // Reset update fields
            document.getElementById('contentType').value = 'update';
            document.getElementById('newsTitle').value = '';
            document.getElementById('newsEmoji').value = '';
            document.getElementById('newsContent').value = '';
            
            // Reset game fields
            document.getElementById('gameTitle').value = '';
            document.getElementById('gameDescription').value = '';
            document.getElementById('gameLink').value = '';
            document.getElementById('gamePlayers').value = '';
            document.getElementById('gameStatus').value = 'üü¢ LIVE';
            
            // Reset image upload
            removeImage();
            removeGameThumbnail();
            
            // Show update fields by default
            toggleContentType();
        }

        function closeAddNewsModal() {
            document.getElementById('addNewsModal').classList.remove('active');
        }

        function openManageStaffModal(staffId = null) {
            if (!currentStaff) {
                alert('Anda harus login sebagai staff terlebih dahulu');
                return;
            }
            
            editingStaffId = staffId;
            document.getElementById('manageStaffModal').classList.add('active');
            document.getElementById('staffError').textContent = '';
            document.getElementById('staffSuccess').textContent = '';
            
            if (staffId) {
                // Edit mode
                document.getElementById('staffModalTitle').textContent = 'Edit Staff';
                loadStaffDataForEdit(staffId);
            } else {
                // Add mode
                document.getElementById('staffModalTitle').textContent = 'Tambah Staff Baru';
                document.getElementById('staffName').value = '';
                document.getElementById('staffRole').value = 'admin';
                document.getElementById('staffDescription').value = '';
                removeStaffPhoto();
            }
        }

        function closeManageStaffModal() {
            document.getElementById('manageStaffModal').classList.remove('active');
            editingStaffId = null;
        }

        async function loadStaffDataForEdit(staffId) {
            try {
                const result = await window.storage.get('raps-staff', true);
                if (result && result.value) {
                    const staffList = JSON.parse(result.value);
                    const staff = staffList.find(s => s.id == staffId);
                    
                    if (staff) {
                        document.getElementById('staffName').value = staff.name;
                        document.getElementById('staffRole').value = staff.role;
                        document.getElementById('staffDescription').value = staff.description;
                        
                        if (staff.photo) {
                            uploadedStaffPhoto = staff.photo;
                            document.getElementById('staffPhotoImg').src = staff.photo;
                            document.getElementById('staffPhotoPreview').classList.add('active');
                            document.getElementById('removeStaffPhotoBtn').style.display = 'inline-block';
                        }
                    }
                }
            } catch (error) {
                console.error('Error loading staff data:', error);
            }
        }

        // Save Staff (Add or Edit)
        async function saveStaff() {
            if (!currentStaff) {
                alert('Anda harus login sebagai staff');
                return;
            }

            const name = document.getElementById('staffName').value.trim();
            const role = document.getElementById('staffRole').value;
            const description = document.getElementById('staffDescription').value.trim();
            const errorDiv = document.getElementById('staffError');
            const successDiv = document.getElementById('staffSuccess');

            errorDiv.textContent = '';
            successDiv.textContent = '';

            if (!name || !description) {
                errorDiv.textContent = 'Mohon isi nama dan deskripsi staff';
                return;
            }

            try {
                let staffList = [];
                try {
                    const result = await window.storage.get('raps-staff', true);
                    if (result && result.value) {
                        staffList = JSON.parse(result.value);
                    }
                } catch (e) {
                    // No existing staff
                }

                if (editingStaffId) {
                    // Edit existing staff
                    const index = staffList.findIndex(s => s.id == editingStaffId);
                    if (index !== -1) {
                        staffList[index] = {
                            ...staffList[index],
                            name,
                            role,
                            description,
                            photo: uploadedStaffPhoto
                        };
                    }
                    successDiv.textContent = 'Staff berhasil diupdate!';
                } else {
                    // Add new staff
                    const staffItem = {
                        id: Date.now(),
                        name,
                        role,
                        description,
                        photo: uploadedStaffPhoto
                    };
                    staffList.push(staffItem);
                    successDiv.textContent = 'Staff berhasil ditambahkan!';
                }

                await window.storage.set('raps-staff', JSON.stringify(staffList), true);
                
                setTimeout(() => {
                    closeManageStaffModal();
                    loadStaff();
                }, 1500);

            } catch (error) {
                console.error('Error saving staff:', error);
                errorDiv.textContent = 'Terjadi kesalahan saat menyimpan staff';
            }
        }

        // Delete Staff
        async function deleteStaff(staffId) {
            if (!confirm('Yakin ingin menghapus staff ini?')) {
                return;
            }

            try {
                const result = await window.storage.get('raps-staff', true);
                if (result && result.value) {
                    let staffList = JSON.parse(result.value);
                    staffList = staffList.filter(s => s.id != staffId);
                    await window.storage.set('raps-staff', JSON.stringify(staffList), true);
                    loadStaff();
                }
            } catch (error) {
                console.error('Error deleting staff:', error);
                alert('Terjadi kesalahan saat menghapus staff');
            }
        }

        // Toggle staff management mode
        function toggleStaffManagement() {
            isManagingStaff = !isManagingStaff;
            loadStaff();
        }

        // Donor Management Functions
        function openManageDonorsModal(donorId = null) {
            if (!currentStaff) {
                alert('Anda harus login sebagai staff terlebih dahulu');
                return;
            }
            
            editingDonorId = donorId;
            document.getElementById('manageDonorsModal').classList.add('active');
            document.getElementById('donorError').textContent = '';
            document.getElementById('donorSuccess').textContent = '';
            
            if (donorId) {
                // Edit mode
                document.getElementById('donorModalTitle').textContent = 'Edit Donatur';
                loadDonorDataForEdit(donorId);
            } else {
                // Add mode
                document.getElementById('donorModalTitle').textContent = 'Tambah Donatur Baru';
                document.getElementById('donorName').value = '';
                document.getElementById('donorAmount').value = '';
                document.getElementById('donorMessage').value = '';
            }
        }

        function closeManageDonorsModal() {
            document.getElementById('manageDonorsModal').classList.remove('active');
            editingDonorId = null;
        }

        async function loadDonorDataForEdit(donorId) {
            try {
                const result = await window.storage.get('raps-donors', true);
                if (result && result.value) {
                    const donorsList = JSON.parse(result.value);
                    const donor = donorsList.find(d => d.id == donorId);
                    
                    if (donor) {
                        document.getElementById('donorName').value = donor.name;
                        document.getElementById('donorAmount').value = donor.amount;
                        document.getElementById('donorMessage').value = donor.message || '';
                    }
                }
            } catch (error) {
                console.error('Error loading donor data:', error);
            }
        }

        // Save Donor (Add or Edit)
        async function saveDonor() {
            if (!currentStaff) {
                alert('Anda harus login sebagai staff');
                return;
            }

            const name = document.getElementById('donorName').value.trim();
            const amount = document.getElementById('donorAmount').value.trim();
            const message = document.getElementById('donorMessage').value.trim();
            const errorDiv = document.getElementById('donorError');
            const successDiv = document.getElementById('donorSuccess');

            errorDiv.textContent = '';
            successDiv.textContent = '';

            if (!name || !amount) {
                errorDiv.textContent = 'Mohon isi nama donatur dan jumlah donasi';
                return;
            }

            try {
                let donorsList = [];
                try {
                    const result = await window.storage.get('raps-donors', true);
                    if (result && result.value) {
                        donorsList = JSON.parse(result.value);
                    }
                } catch (e) {
                    // No existing donors
                }

                if (editingDonorId) {
                    // Edit existing donor
                    const index = donorsList.findIndex(d => d.id == editingDonorId);
                    if (index !== -1) {
                        donorsList[index] = {
                            ...donorsList[index],
                            name,
                            amount,
                            message
                        };
                    }
                    successDiv.textContent = 'Donatur berhasil diupdate!';
                } else {
                    // Add new donor
                    const donorItem = {
                        id: Date.now(),
                        name,
                        amount,
                        message,
                        date: new Date().toLocaleDateString('id-ID', { 
                            year: 'numeric', 
                            month: 'long', 
                            day: 'numeric' 
                        })
                    };
                    donorsList.push(donorItem);
                    successDiv.textContent = 'Donatur berhasil ditambahkan!';
                }

                await window.storage.set('raps-donors', JSON.stringify(donorsList), true);
                
                setTimeout(() => {
                    closeManageDonorsModal();
                    loadDonors();
                }, 1500);

            } catch (error) {
                console.error('Error saving donor:', error);
                errorDiv.textContent = 'Terjadi kesalahan saat menyimpan donatur';
            }
        }

        // Delete Donor
        async function deleteDonor(donorId) {
            if (!confirm('Yakin ingin menghapus donatur ini?')) {
                return;
            }

            try {
                const result = await window.storage.get('raps-donors', true);
                if (result && result.value) {
                    let donorsList = JSON.parse(result.value);
                    donorsList = donorsList.filter(d => d.id != donorId);
                    await window.storage.set('raps-donors', JSON.stringify(donorsList), true);
                    loadDonors();
                }
            } catch (error) {
                console.error('Error deleting donor:', error);
                alert('Terjadi kesalahan saat menghapus donatur');
            }
        }

        function closeAddNewsModal() {
            document.getElementById('addNewsModal').classList.remove('active');
        }

        // Submit Content (Update or Game)
        async function submitContent() {
            const contentType = document.getElementById('contentType').value;
            
            if (contentType === 'update') {
                await addNews();
            } else {
                await addGame();
            }
        }

        // Add News Function
        async function addNews() {
            if (!currentStaff) {
                alert('Anda harus login sebagai staff');
                return;
            }

            const title = document.getElementById('newsTitle').value.trim();
            const emoji = document.getElementById('newsEmoji').value.trim() || 'üì¢';
            const content = document.getElementById('newsContent').value.trim();
            const addToGallery = document.getElementById('addToGallery').checked;
            const errorDiv = document.getElementById('newsError');
            const successDiv = document.getElementById('newsSuccess');

            errorDiv.textContent = '';
            successDiv.textContent = '';

            if (!title || !content) {
                errorDiv.textContent = 'Mohon isi judul dan konten update';
                return;
            }

            try {
                // Get existing news
                let newsList = [];
                try {
                    const result = await window.storage.get('raps-news', true);
                    if (result && result.value) {
                        newsList = JSON.parse(result.value);
                    }
                } catch (e) {
                    // No existing news
                }

                // Add new news
                const newsItem = {
                    id: Date.now(),
                    title,
                    emoji,
                    content,
                    image: uploadedImageBase64, // Include base64 image
                    date: new Date().toLocaleDateString('id-ID', { 
                        year: 'numeric', 
                        month: 'long', 
                        day: 'numeric' 
                    }),
                    author: currentStaff.name
                };

                newsList.unshift(newsItem); // Add to beginning

                // Save to storage
                await window.storage.set('raps-news', JSON.stringify(newsList), true);

                // If checkbox is checked and there's an image, add to gallery
                if (addToGallery && uploadedImageBase64) {
                    await addToGalleryStorage(uploadedImageBase64, title);
                }

                successDiv.textContent = 'Update berhasil dipublikasikan!';
                
                // Reload news and gallery
                setTimeout(() => {
                    closeAddNewsModal();
                    loadNews();
                    loadGallery();
                }, 1500);

            } catch (error) {
                console.error('Error adding news:', error);
                errorDiv.textContent = 'Terjadi kesalahan saat mempublikasikan update';
            }
        }

        // Add image to gallery storage
        async function addToGalleryStorage(imageBase64, caption) {
            try {
                let galleryList = [];
                try {
                    const result = await window.storage.get('raps-gallery', true);
                    if (result && result.value) {
                        galleryList = JSON.parse(result.value);
                    }
                } catch (e) {
                    // No existing gallery
                }

                const galleryItem = {
                    id: Date.now(),
                    image: imageBase64,
                    caption: caption,
                    date: new Date().toLocaleDateString('id-ID', { 
                        year: 'numeric', 
                        month: 'long', 
                        day: 'numeric' 
                    })
                };

                galleryList.unshift(galleryItem);

                await window.storage.set('raps-gallery', JSON.stringify(galleryList), true);
            } catch (error) {
                console.error('Error adding to gallery:', error);
            }
        }

        // Add Game Function
        async function addGame() {
            if (!currentStaff) {
                alert('Anda harus login sebagai staff');
                return;
            }

            const title = document.getElementById('gameTitle').value.trim();
            const description = document.getElementById('gameDescription').value.trim();
            const link = document.getElementById('gameLink').value.trim();
            const players = document.getElementById('gamePlayers').value.trim();
            const status = document.getElementById('gameStatus').value;
            const errorDiv = document.getElementById('newsError');
            const successDiv = document.getElementById('newsSuccess');

            errorDiv.textContent = '';
            successDiv.textContent = '';

            if (!title || !description || !link) {
                errorDiv.textContent = 'Mohon isi nama game, deskripsi, dan link game';
                return;
            }

            try {
                // Get existing games
                let gamesList = [];
                try {
                    const result = await window.storage.get('raps-games', true);
                    if (result && result.value) {
                        gamesList = JSON.parse(result.value);
                    }
                } catch (e) {
                    // No existing games
                }

                // Add new game
                const gameItem = {
                    id: Date.now(),
                    title,
                    description,
                    thumbnail: uploadedGameThumbnail,
                    link,
                    players: players || 'N/A',
                    status,
                    date: new Date().toLocaleDateString('id-ID', { 
                        year: 'numeric', 
                        month: 'long', 
                        day: 'numeric' 
                    }),
                    author: currentStaff.name
                };

                gamesList.unshift(gameItem);

                // Save to storage
                await window.storage.set('raps-games', JSON.stringify(gamesList), true);

                successDiv.textContent = 'Game berhasil ditambahkan!';
                
                // Reload games
                setTimeout(() => {
                    closeAddNewsModal();
                    loadGames();
                }, 1500);

            } catch (error) {
                console.error('Error adding game:', error);
                errorDiv.textContent = 'Terjadi kesalahan saat menambahkan game';
            }
        }

        // Load Donors
        async function loadDonors() {
            const donorsLeaderboard = document.getElementById('donorsLeaderboard');
            
            try {
                const result = await window.storage.get('raps-donors', true);
                
                if (!result || !result.value) {
                    donorsLeaderboard.innerHTML = `
                        <div style="text-align: center; padding: 3rem; color: var(--gray);">
                            <h3 style="font-family: 'Fredoka', sans-serif; font-size: 1.3rem; margin-bottom: 0.5rem; color: var(--light);">üí∞ Belum Ada Donatur</h3>
                            <p>Staff dapat menambahkan daftar donatur melalui tombol "Kelola Donasi"</p>
                        </div>
                    `;
                    return;
                }

                const donorsList = JSON.parse(result.value);
                
                if (donorsList.length === 0) {
                    donorsLeaderboard.innerHTML = `
                        <div style="text-align: center; padding: 3rem; color: var(--gray);">
                            <h3 style="font-family: 'Fredoka', sans-serif; font-size: 1.3rem; margin-bottom: 0.5rem; color: var(--light);">üí∞ Belum Ada Donatur</h3>
                            <p>Staff dapat menambahkan daftar donatur melalui tombol "Kelola Donasi"</p>
                        </div>
                    `;
                    return;
                }

                donorsLeaderboard.innerHTML = donorsList.map((donor, index) => {
                    const rank = index + 1;
                    
                    const editButtons = currentStaff ? `
                        <div class="donor-actions">
                            <button class="donor-edit-btn" onclick="openManageDonorsModal(${donor.id})">‚úèÔ∏è Edit</button>
                            <button class="donor-delete-btn" onclick="deleteDonor(${donor.id})">üóëÔ∏è Hapus</button>
                        </div>
                    ` : '';
                    
                    return `
                        <div class="donor-item ${currentStaff ? 'editable' : ''}">
                            <div class="rank">#${rank}</div>
                            <div class="donor-info">
                                <div class="donor-name">${donor.name}</div>
                                <div class="donor-message">${donor.message || 'Terima kasih atas dukungannya! üíñ'}</div>
                                ${editButtons}
                            </div>
                            <div class="donation-amount">${donor.amount}</div>
                        </div>
                    `;
                }).join('');

            } catch (error) {
                console.error('Error loading donors:', error);
                donorsLeaderboard.innerHTML = `
                    <div style="text-align: center; padding: 3rem; color: var(--gray);">
                        <h3 style="font-family: 'Fredoka', sans-serif; font-size: 1.3rem; margin-bottom: 0.5rem; color: var(--light);">üí∞ Belum Ada Donatur</h3>
                        <p>Staff dapat menambahkan daftar donatur melalui tombol "Kelola Donasi"</p>
                    </div>
                `;
            }
        }

        // Load Staff
        async function loadStaff() {
            const staffGrid = document.getElementById('staffGrid');
            
            try {
                const result = await window.storage.get('raps-staff', true);
                
                if (!result || !result.value) {
                    staffGrid.innerHTML = `
                        <div class="empty-games fade-in" style="grid-column: 1 / -1;">
                            <h3>üë• Tim Staff Belum Ditambahkan</h3>
                            <p>Staff yang login dapat menambahkan anggota tim melalui tombol "Kelola Staff"</p>
                        </div>
                    `;
                    return;
                }

                const staffList = JSON.parse(result.value);
                
                if (staffList.length === 0) {
                    staffGrid.innerHTML = `
                        <div class="empty-games fade-in" style="grid-column: 1 / -1;">
                            <h3>üë• Tim Staff Belum Ditambahkan</h3>
                            <p>Staff yang login dapat menambahkan anggota tim melalui tombol "Kelola Staff"</p>
                        </div>
                    `;
                    return;
                }

                staffGrid.innerHTML = staffList.map((staff, index) => {
                    const avatarContent = staff.photo 
                        ? `<img src="${staff.photo}" alt="${staff.name}">`
                        : ROLE_ICONS[staff.role];
                    
                    const editButtons = currentStaff ? `
                        <div class="staff-actions">
                            <button class="staff-edit-btn" onclick="openManageStaffModal(${staff.id})">‚úèÔ∏è Edit</button>
                            <button class="staff-delete-btn" onclick="deleteStaff(${staff.id})">üóëÔ∏è Hapus</button>
                        </div>
                    ` : '';
                    
                    return `
                        <div class="staff-card ${staff.role} fade-in ${currentStaff ? 'editable' : ''}">
                            <div class="staff-avatar">${avatarContent}</div>
                            <h3 class="staff-name">${staff.name}</h3>
                            <span class="staff-role">${ROLE_LABELS[staff.role]}</span>
                            <p class="staff-desc">${staff.description}</p>
                            ${editButtons}
                        </div>
                    `;
                }).join('');

                // Re-observe for animations
                document.querySelectorAll('.fade-in').forEach(el => {
                    observer.observe(el);
                });

            } catch (error) {
                console.error('Error loading staff:', error);
                staffGrid.innerHTML = `
                    <div class="empty-games fade-in" style="grid-column: 1 / -1;">
                        <h3>üë• Tim Staff Belum Ditambahkan</h3>
                        <p>Staff yang login dapat menambahkan anggota tim melalui tombol "Kelola Staff"</p>
                    </div>
                `;
            }
        }

        // Load Games
        async function loadGames() {
            const gamesGrid = document.getElementById('gamesGrid');
            
            try {
                const result = await window.storage.get('raps-games', true);
                
                if (!result || !result.value) {
                    gamesGrid.innerHTML = `
                        <div class="empty-games fade-in">
                            <h3>üéÆ Daftar Game Segera Hadir</h3>
                            <p>Staff kami sedang mempersiapkan game-game menarik untuk Anda</p>
                        </div>
                    `;
                    return;
                }

                const gamesList = JSON.parse(result.value);
                
                if (gamesList.length === 0) {
                    gamesGrid.innerHTML = `
                        <div class="empty-games fade-in">
                            <h3>üéÆ Daftar Game Segera Hadir</h3>
                            <p>Staff kami sedang mempersiapkan game-game menarik untuk Anda</p>
                        </div>
                    `;
                    return;
                }

                gamesGrid.innerHTML = gamesList.map((game, index) => {
                    const thumbnailContent = game.thumbnail 
                        ? `<img src="${game.thumbnail}" alt="${game.title}">`
                        : '';
                    
                    return `
                        <div class="game-card fade-in">
                            <div class="game-thumbnail ${game.thumbnail ? 'has-image' : ''}">${thumbnailContent}</div>
                            <div class="game-badge">${game.status}</div>
                            <div class="game-info">
                                <h3 class="game-title">${game.title}</h3>
                                <p class="game-description">${game.description}</p>
                                <div class="game-meta">
                                    <div class="game-meta-item">
                                        <span>üë•</span>
                                        <span>${game.players} pemain</span>
                                    </div>
                                    <div class="game-meta-item">
                                        <span>üìÖ</span>
                                        <span>${game.date}</span>
                                    </div>
                                </div>
                                <a href="${game.link}" target="_blank" class="game-link">üéÆ Main Sekarang</a>
                            </div>
                        </div>
                    `;
                }).join('');

                // Re-observe for animations
                document.querySelectorAll('.fade-in').forEach(el => {
                    observer.observe(el);
                });

            } catch (error) {
                console.error('Error loading games:', error);
                gamesGrid.innerHTML = `
                    <div class="empty-games fade-in">
                        <h3>üéÆ Daftar Game Segera Hadir</h3>
                        <p>Staff kami sedang mempersiapkan game-game menarik untuk Anda</p>
                    </div>
                `;
            }
        }

        // Load News
        async function loadNews() {
            const newsGrid = document.getElementById('newsGrid');
            
            try {
                const result = await window.storage.get('raps-news', true);
                
                if (!result || !result.value) {
                    newsGrid.innerHTML = `
                        <div class="empty-news fade-in">
                            <h3>üì¢ Update Terbaru Segera Hadir</h3>
                            <p>Nantikan pengumuman dan berita terkini dari tim kami</p>
                        </div>
                    `;
                    return;
                }

                const newsList = JSON.parse(result.value);
                
                if (newsList.length === 0) {
                    newsGrid.innerHTML = `
                        <div class="empty-news fade-in">
                            <h3>üì¢ Update Terbaru Segera Hadir</h3>
                            <p>Nantikan pengumuman dan berita terkini dari tim kami</p>
                        </div>
                    `;
                    return;
                }

                newsGrid.innerHTML = newsList.map((news, index) => {
                    // If news has image, display it; otherwise show emoji on gradient
                    const imageContent = news.image 
                        ? `<img src="${news.image}" alt="${news.title}">`
                        : news.emoji;
                    
                    return `
                        <div class="news-card fade-in">
                            <div class="news-image">${imageContent}</div>
                            <div class="news-content">
                                <div class="news-date">${news.date}</div>
                                <h3 class="news-title">${news.title}</h3>
                                <p class="news-desc">${news.content}</p>
                            </div>
                        </div>
                    `;
                }).join('');

                // Re-observe for animations
                document.querySelectorAll('.fade-in').forEach(el => {
                    observer.observe(el);
                });

            } catch (error) {
                console.error('Error loading news:', error);
                newsGrid.innerHTML = `
                    <div class="empty-news fade-in">
                        <h3>üì¢ Update Terbaru Segera Hadir</h3>
                        <p>Nantikan pengumuman dan berita terkini dari tim kami</p>
                    </div>
                `;
            }
        }

        // Load Gallery
        async function loadGallery() {
            const galleryGrid = document.getElementById('galleryGrid');
            
            try {
                const result = await window.storage.get('raps-gallery', true);
                
                if (!result || !result.value) {
                    galleryGrid.innerHTML = `
                        <div class="empty-gallery fade-in">
                            <h3>üì∏ Galeri Foto Segera Hadir</h3>
                            <p>Momen-momen terbaik dari komunitas kami akan ditampilkan di sini</p>
                        </div>
                    `;
                    return;
                }

                const galleryList = JSON.parse(result.value);
                
                if (galleryList.length === 0) {
                    galleryGrid.innerHTML = `
                        <div class="empty-gallery fade-in">
                            <h3>üì∏ Galeri Foto Segera Hadir</h3>
                            <p>Momen-momen terbaik dari komunitas kami akan ditampilkan di sini</p>
                        </div>
                    `;
                    return;
                }

                galleryGrid.innerHTML = galleryList.map((item, index) => `
                    <div class="gallery-item has-image fade-in">
                        <img src="${item.image}" alt="${item.caption}">
                        <div class="gallery-caption">
                            <strong>${item.caption}</strong><br>
                            <small>${item.date}</small>
                        </div>
                    </div>
                `).join('');

                // Re-observe for animations
                document.querySelectorAll('.fade-in').forEach(el => {
                    observer.observe(el);
                });

            } catch (error) {
                console.error('Error loading gallery:', error);
                galleryGrid.innerHTML = `
                    <div class="empty-gallery fade-in">
                        <h3>üì∏ Galeri Foto Segera Hadir</h3>
                        <p>Momen-momen terbaik dari komunitas kami akan ditampilkan di sini</p>
                    </div>
                `;
            }
        }

        // Mobile Menu Toggle
        function toggleMenu() {
            const menu = document.getElementById('navMenu');
            menu.classList.toggle('active');
        }

        // Smooth Scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                    // Close mobile menu if open
                    document.getElementById('navMenu').classList.remove('active');
                }
            });
        });

        // Scroll Animation
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, observerOptions);

        document.querySelectorAll('.fade-in').forEach(el => {
            observer.observe(el);
        });

        // Active Nav Link on Scroll
        window.addEventListener('scroll', () => {
            let current = '';
            const sections = document.querySelectorAll('section');
            
            sections.forEach(section => {
                const sectionTop = section.offsetTop;
                const sectionHeight = section.clientHeight;
                if (scrollY >= (sectionTop - 100)) {
                    current = section.getAttribute('id');
                }
            });

            document.querySelectorAll('nav a').forEach(link => {
                link.classList.remove('active');
                if (link.getAttribute('href') === `#${current}`) {
                    link.classList.add('active');
                }
            });
        });

        // Initialize on page load
        window.addEventListener('DOMContentLoaded', () => {
            checkLoginStatus();
            loadStaff();
            loadGames();
            loadNews();
            loadDonors();
            loadGallery();
        });

        // Close modals when clicking outside
        window.addEventListener('click', (e) => {
            if (e.target.classList.contains('modal')) {
                e.target.classList.remove('active');
            }
        });
    </script>
</body>
</html>
